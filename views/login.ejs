						<input class="form-control" type="password" name="password" placeholder="Password">
                        <span class="ion-key form-control-feedback"></span>
                    </div>
					<input class="btn btn-primary btn-lg btn-block" type="submit" value="Login">
				</form>
        </div>
	</div>
</div>

